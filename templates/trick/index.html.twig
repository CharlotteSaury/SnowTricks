{% extends 'base.html.twig' %}

{% block title %}Site communautaire SnowTricks
{% endblock %}


{% block body %}
	<div class="row" id="home">
		<div class="container-fluid  homeHeader d-flex justify-content-center align-items-center px-0 mx-0">
			<div class="homeTitle text-center py-4">
				<h1>SnowTricks</h1>
				<h2>Communaut√© d'apprentissage de figures de snowboard</h2>
			</div>
		</div>
		<a href="#trickList">
			<i class="fas fa-arrow-down"></i>
		</a>
	</div>
	<div class="container-fluid">
		<div class="row justify-content-center pb-0"  id="trickList">
			{% for trick in tricks %}
				<div class="col-md-2 col-sm-4 mx-1 mb-5 trick-card-div">
					<div class="card">
						<img src="{{ trick.mainImage }}" class="card-img-top" alt="Illustration de la figure {{ trick.name }}">
						<div class="card-body d-flex flex-row justify-content-between px-2">
							<div class="col-8 px-1 text-center">
								<h5 class="card-title mb-0"><a href="{{ path('trick.show', {id: trick.id, slug: (trick.name|lower|replace({' ':'_'})) }) }}">{{ trick.name }}</a></h5>
                            </div>
							<div class="col-4 px-0 text-center card-actions d-flex align-items-center">
                                <a href="">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a class="ml-2" href="#">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row justify-content-center mb-5">
			<div class="col-md-4 offset-md-4 text-center" id="loadMoreCol">
				<button type="button" class="btn btn-light" id="loadMoreBtn"><i class="fas fa-spinner mr-3"></i>Load more</button>
				<button type="button" class="btn btn-light" id="loadLessBtn"><i class="fas fa-spinner mr-3"></i>Load less</button>
			</div>
			<div class="col-md-4"><a href="#trickList" id="arrowUp"><i class="fas fa-arrow-up"></i></a></div>
		</div>
	</div>


{% endblock %}
