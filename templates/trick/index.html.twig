{% extends 'base.html.twig' %}

{% block title %}Site communautaire SnowTricks
{% endblock %}


{% block body %}
	<div class="row" id="home">
		<div class="container-fluid  homeHeader d-flex justify-content-center align-items-center px-0 mx-0">
			<div class="homeTitle text-center py-4">
				<h1>SnowTricks</h1>
				<h2>Communaut√© d'apprentissage de figures de snowboard</h2>
			</div>
		</div>
		<a href="#trickList">
			<i class="fas fa-arrow-down"></i>
		</a>
	</div>
	<div class="row" id="trickList">
		<div class="container-fluid d-flex flex-row justify-content-center">
			{% for trick in tricks %}
				<div class="col-md-2">
					<div class="card">
						<img src="{{ trick.mainImage }}" class="card-img-top" alt="Illustration de la figure {{ trick.name }}">
						<div class="card-body d-flex flex-row justify-content-between">
							<h5 class="card-title mb-0"><a href="">{{ trick.name }}</a></h5>
                            <div class="card-actions">
                                <a class="ml-3" href="#">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a class="ml-3" href="#">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
						</div>
					</div>
				</div>


			{% endfor %}
		</div>
		<a href="#home">
			<i class="fas fa-arrow-up"></i>
		</a>
	</div>


{% endblock %}
