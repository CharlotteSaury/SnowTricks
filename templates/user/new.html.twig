{% extends 'base.html.twig' %}

{% block title %}Ajouter une figure
{% endblock %}


{% block body %}
	<div class="container-fluid py-5 trick-bg">
		{{ form_start(form) }}
		<div class="container px-0 pb-5" id="editPage">
			<div class="row d-flex flex-column justify-content-center align-items-center" id="trickMainImg" style="background: url('/media/images/home.jpg');">
				<div class="py-2 px-3 mr-auto return-btn">
					<a href="{{ path('trick.index') }}" class="btn btn-info">
						<i class="fas fa-undo-alt mr-2"></i>Back
					</a>
				</div>
				<div class="text-center">
					<h1 class="mb-5">New Trick</h1>
					{{ form_row(form.mainImage) }}
				</div>
			</div>
			<div class="row py-5 d-flex flex-column" id="newTrickImages">
				<ul id="image-fields-list" data-prototype="{{ form_widget(form.images.vars.prototype)|e }}" data-widget-tags="{{ '<li></li>'|e }}" data-widget-counter="{{ form.images|length }}">
					{% for imageField in form.images %}
						<li>
							{{ form_errors(imageField) }}
							{{ form_widget(imageField) }}
						</li>
					{% endfor %}
				</ul>
				<button type="button" class="add-another-collection-widget" data-list-selector="#image-fields-list">Add an image</button>
			</div>

			<div class="row py-3 d-flex flex-column align-items-center pb-0" id="newTrickInfos">
				<div class="form-group w-75 mr-auto">
					{{ form_errors(form.name) }}
					{{ form_widget(form.name, {'attr': {'placeholder': 'Trick name *'}}) }}
				</div>
				<div class="form-group w-100">
					{{ form_errors(form.description) }}
					{{ form_widget(form.description, {'attr': {'placeholder': 'Trick description *'}}) }}
				</div>
				<div class="form-group w-25 mr-auto">
					{{ form_widget(form.groups) }}
				</div>
				<button type="submit" class="btn btn-info ml-auto">Save</button>

			</div>

		</div>

		{{ form_end(form) }}
	</div>
</div>{% endblock %}
